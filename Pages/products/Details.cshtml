@page
@model SleekClothing.Pages.products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row">
        <!-- Image du produit -->
        <div class="col-md-6">
            <img src="/@Model.Product.ImageLocation" class="img-fluid" alt="@Html.DisplayFor(model => model.Product.Name)" />
        </div>
        
        <!-- Détails du produit -->
        <div class="col-md-6">
            <h1 class="fw-bold">@Html.DisplayFor(model => model.Product.Name)</h1>
            <h4 class="text-success">$@Html.DisplayFor(model => model.Product.Price)</h4>
            <div class="mt-2">
                <h5>Description:</h5>
                <p>@Html.DisplayFor(model => model.Product.Description)</p>
                <h5>Category:</h5>
                <p class="fw-normal">@Html.DisplayFor(model => model.Product.Category.Name)</p>
            </div>
            <div class="mt-4">
                <a class="btn btn-primary btn-lg" asp-page="./Index">Back to Products</a>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1200px;
    }
    .img-fluid {
        max-height: 300px;
        object-fit: cover;
    }
    .btn-lg {
        padding: 10px 20px;
        font-size: 1.25rem;
    }
</style>
